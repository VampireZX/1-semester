#pragma hdrstop
#pragma argsused

#ifdef _WIN32
#include <tchar.h>
#else
  typedef char _TCHAR;
  #define _tmain main
#endif

#include <stdio.h>
#include <cmath>
#include <iostream>
#include <conio.h>
using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	int n,k;
	double a,b,h,fak,sum,y,x;

	cout<< "Enter a,b,h,n:\n";
	cout<< "a= ";
	cin>> a;
	cout<< "b= ";
	cin>> b;
	cout<< "h= ";
	cin>> h;
	cout<< "n= ";
	cin>> n;

	cout <<" Y(x)       S(x)       |Y(x)-S(x)|\n";
	for (x=a; x<=b; x+=h)
	{fak=1; sum=1; y=cos(x);
			for (k=1; k<=n; k++)
		{
				fak*=-x*x/((2*k-1)*(2*k));
				sum+=fak;
		}
	cout << y << "   " << sum << "   " << fabs(y-sum) << "\n";
	}

getch();
return 0;
}

