#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button1Click(TObject *Sender)
{
 double a,b,h,x,y,f,sum,t;
 int k,an=-1,n;
a=StrToFloat(Edit1->Text);
b=StrToFloat(Edit2->Text);
h=StrToFloat(Edit3->Text);
n=StrToFloat(Edit4->Text);
		for(x=a;x<=b;x+=h)
			{
			 y=cos(x);
			 t=1; sum=1;


				for(k=1;k<=n*2;k++)
				{
				 t=t*an*pow(x,2)/(k*2);
				 sum+=t;


				}
			  f=fabs(y-sum);
			   Memo1->Lines->Add(" Y(x)= " +
		  FloatToStr(y) + " S(x)= " + FloatToStr(sum) + " |S(x)-Y(x)|= " +
		  FloatToStr(f));

			}





}
//---------------------------------------------------------------------------

